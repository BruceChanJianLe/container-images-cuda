ENV NV_CUDNN_VERSION {{ cuda.x86_64.cudnn.version[:-2] }}

{% if cuda.cudnn.target == "runtime" %}
ENV NV_CUDNN_PACKAGE "libcudnn{{ cuda.x86_64.cudnn.version[0] }}=$NV_CUDNN_VERSION-1+cuda{{ cuda.version.major }}.{{ cuda.version.minor }}"
