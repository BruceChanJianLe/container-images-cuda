    libcublas-devel-{{ cuda.version.major }}-{{ cuda.version.minor }}-${NV_LIBCUBLAS_DEV_VERSION} \
    libnpp-devel-{{ cuda.version.major }}-{{ cuda.version.minor }}-${NV_LIBNPP_DEV_VERSION} \
    ${NV_LIBNCCL_PACKAGE_DEV} \
    && yum clean all \
