ARG IMAGE_NAME
FROM ${IMAGE_NAME}:11.3.1-runtime-ubi8 as base

FROM base as base-amd64

ENV NV_CUDA_LIB_VERSION "11.3.1-1"
ENV NV_NVPROF_VERSION "11.3.111-1"
ENV NV_CUDA_RUNTIME_VERSION_DEV "11.3.109-1"
ENV NV_NVML_VERSION_DEV "11.3.58-1"
ENV NV_CUBLAS_VERSION_DEV "11.5.1.109-1"
ENV NV_LIBNPP_VERSION_DEV "11.3.3.95-1"
ENV NCCL_VERSION 2.9.9
ENV NV_LIBNCCL_PACKAGE_DEV "libnccl-devel-2.9.9-1+cuda11.3"

FROM base as base-arm64

ENV NV_CUDA_LIB_VERSION "11.3.1-1"
ENV NV_NVPROF_VERSION "11.3.111-1"
ENV NV_CUDA_RUNTIME_VERSION_DEV "11.3.109-1"
ENV NV_NVML_VERSION_DEV "11.3.58-1"
ENV NV_CUBLAS_VERSION_DEV "11.5.1.109-1"
ENV NV_LIBNPP_VERSION_DEV "11.3.3.95-1"
ENV NCCL_VERSION 2.9.9
ENV NV_LIBNCCL_PACKAGE_DEV "libnccl-devel-2.9.9-1+cuda11.3"

FROM base as base-ppc64le

ENV NV_CUDA_LIB_VERSION "11.3.1-1"
ENV NV_NVPROF_VERSION "11.3.111-1"
ENV NV_CUDA_RUNTIME_VERSION_DEV "11.3.109-1"
ENV NV_NVML_VERSION_DEV "11.3.58-1"
ENV NV_CUBLAS_VERSION_DEV "11.5.1.109-1"
ENV NV_LIBNPP_VERSION_DEV "11.3.3.95-1"
ENV NCCL_VERSION 2.9.9
ENV NV_LIBNCCL_PACKAGE_DEV "libnccl-devel-2.9.9-1+cuda11.3"

FROM base-${TARGETARCH}

ARG TARGETARCH

LABEL maintainer "NVIDIA CORPORATION <sw-cuda-installer@nvidia.com>"

RUN yum install -y \
    make \
    cuda-command-line-tools-11-3-${NV_CUDA_LIB_VERSION} \
    cuda-libraries-devel-11-3-${NV_CUDA_LIB_VERSION} \
    cuda-minimal-build-11-3-${NV_CUDA_LIB_VERSION} \
    cuda-cudart-devel-11-3-${NV_CUDA_RUNTIME_VERSION_DEV} \
    cuda-nvprof-11-3-${NV_NVPROF_VERSION} \
    cuda-nvml-devel-11-3-${NV_NVML_VERSION_DEV} \
    libcublas-devel-11-3-${NV_CUBLAS_VERSION_DEV} \
    libnpp-devel-11-3-${NV_LIBNPP_VERSION_DEV} \
    ${NV_LIBNCCL_PACKAGE_DEV} \
    && yum clean all \
    && rm -rf /var/cache/yum/*


ENV LIBRARY_PATH /usr/local/cuda/lib64/stubs